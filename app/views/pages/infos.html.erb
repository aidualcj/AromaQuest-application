<div class="banner-infos">
  <div class="back-icon">
    <%= link_to dashboard_path do %>
      <i class="fa-solid fa-chevron-left"></i>
    <% end %>
  </div>
  <h1 class="banner-title">INFORMATIONS <br>PERSONNELLES</h1>
</div>


<div class="form-container">
  <div class="form-card">
    <%= form_for(current_user, url: user_registration_path, method: :put) do |f| %>
      <div class="form-group">
        <%= f.label :name, "PrÃ©nom*" %>
        <%= f.text_field :name, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= f.label :surname, "Nom*" %>
        <%= f.text_field :surname, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= f.label :email, "Email*" %>
        <%= f.email_field :email, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= f.label :address, "Adresse*" %>
        <%= f.text_field :address, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Mot de passe*" %>
        <%= f.password_field :password, class: 'form-control', required: true %>
      </div>

      <div class="form-group text-center">
        <%= f.submit "ENREGISTRER", class: 'btn-save' %>
      </div>
    <% end %>
  </div>
</div>
