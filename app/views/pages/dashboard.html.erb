<div class="banner">
  <h2 class="banner-title">TABLEAU DE BORD</h2>
  <p class="banner-subtitle">Bonjour <%= current_user.name %>,</p>
</div>

<div class="container text-decoration-none mt-4">
  <div class="row dashboard-cards">
    <div class="col-12 col-md-6 mb-4">
      <div class="card h-100">
        <div class="card-body d-flex justify-content-between align-items-center">
          <i class="fa-regular fa-user icon-large"></i>
          <%= link_to "Informations personnelles", infos_dashboard_path, class: "stretched-link" %>
          <i class="fa-solid fa-caret-right"></i>
        </div>
      </div>
    </div>

    <div class="col-12 col-md-6 mb-4">
      <div class="card h-100">
        <div class="card-body d-flex justify-content-between align-items-center">
          <i class="fa-regular fa-heart icon-large"></i>
          <%= link_to "Mes favoris", favorites_dashboard_path, class: "stretched-link" %>
          <i class="fa-solid fa-caret-right"></i>
        </div>
      </div>
    </div>

    <div class="col-12 col-md-6 mb-4">
      <div class="card h-100">
        <div class="card-body d-flex justify-content-between align-items-center">
          <i class="fa-solid fa-magnifying-glass icon-large"></i>
          <%= link_to "Mes résultats", results_dashboard_path, class: "stretched-link" %>
          <i class="fa-solid fa-caret-right"></i>
        </div>
      </div>
    </div>

    <div class="col-12 col-md-6 mb-4">
      <div class="card h-100">
        <div class="card-body d-flex justify-content-between align-items-center">
          <i class="fa-solid fa-cart-shopping icon-large"></i>
          <%= link_to "Mes achats", orders_path, class: "stretched-link" %>
          <i class="fa-solid fa-caret-right"></i>
        </div>
      </div>
    </div>

    <div class="col-12 mt-1">
      <ul class="notifications-newsletter-list">
        <li>
          <span>ACTIVER LES NOTIFICATIONS</span>
          <i class="fa-solid fa-toggle-on icon-toggle"></i>
        </li>
        <hr class="divider">
        <li>
          <span>RECEVOIR LA NEWSLETTER</span>
          <i class="fa-solid fa-toggle-off icon-toggle"></i>
        </li>
      </ul>
    </div>

    <div class="col-12 mt-4">
      <div class="logout-button text-center">
        <%= link_to "SE DÉCONNECTER", destroy_user_session_path, method: :delete, class: "btn btn-logout" %>
      </div>
    </div>
  </div>
</div>
